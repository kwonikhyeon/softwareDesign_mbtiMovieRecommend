<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp">

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/optionOutButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="O O O 님"
        android:textSize="50dp"
        app:layout_constraintStart_toEndOf="@+id/optionOutButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반갑습니다!"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/nameTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/userMbtiInfoTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="회원님의 MBTI는"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/userMbtiInfoTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userMbtiInfoTextView1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:text="ESFJ"
        android:textSize="70dp"
        />

    <TextView
        android:id="@+id/userMbtiInfoTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userMbtiInfoTextView2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:text="입니다."
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/resetMbtiButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userMbtiInfoTextView3"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:text="MBTI 재설정하기"
        />

    <Button
        android:id="@+id/testMbtiButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetMbtiButton"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="MBTI 검사하기"
        />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testMbtiButton"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:text="로그아웃"
        />

    <Button
        android:id="@+id/resignButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoutButton"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="회원탈퇴"
        />
</androidx.constraintlayout.widget.ConstraintLayout>